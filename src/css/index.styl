@import "../../node_modules/tracim_lib/src/css/Variable.styl"

.appfolder
  width 1155px
  &__optionfolder
    margin 10px
    border-radius 10px
    padding 25px
    width calc(100% - 10px) /* 10px => margin */
    height 100%
    background-color off-white
    .optionfolder
      &__typecontent
        &__title
          font-size 20px
          font-weight 600
          color blue
        &__desc
          font-size 18px
        &__form
          .fa-file-text-o
            color htmlColor
          .fa-file-image-o
            color fileColor
          .fa-file-code-o
            color markdownColor
          .fa-comments-o
            color threadColor
          .fa-list-ul
            color taskColor
          .fa-ticket
            color issueColor
          &__apphtml
            &__label
              &__icon
                font-size 20px
              &__text
                font-size 17px
